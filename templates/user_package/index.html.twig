{% extends 'base.html.twig' %}

{% block title %}My Package{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
   <h1>{{package.Name}}</h1>
   <p><b>Internet: </b>{{internet ? internet.speed : "none"}}  \ <b> Precio: </b> {{ internet ? internet.price : 0}}$ </p>
   <p><b>Telephony: </b>{{telephony ? telephony.minutes : "none"}} \ <b> Precio: </b> {{ telephony ? telephony.price : 0}}$  </p>
   <p><b>Cable: </b>{{cable ? cable.plan.Name : "none"}}  \ <b> Precio: </b> {{ cable ? cable.price : 0}}$ </p>
   <p><b>Discount: </b>{{package.discount}}% </p>
   <p><b>Total: </b> {{  ((internet ? internet.price : 0) + (telephony ? telephony : 0) + (cable ? cable.price : 0)) - ((internet ? internet.price : 0) + (telephony ? telephony.price : 0) + (cable ? cable.price : 0))*(1/package.discount) }}$</p> 
</div>
{% endblock %}
