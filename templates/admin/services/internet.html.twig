        <label><input type="checkbox" name="form[miercoles]" value="miercoles">miercoles</label><br>
        <label><input type="checkbox" name="form[jueves]" value="jueves">jueves<br>
        <label><input type="checkbox" name="form[viernes]" value="viernes"> viernes</label><br>
        <label><input type="checkbox" name="form[sabado]" value="sabado"> sabado</label><br>

        
    </div>
{{ form_end(ServicesForm) }}
</div>
{% endblock %}

