{% extends 'base.html.twig' %}

{% block title %}Create an Program{% endblock %}


{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    .WeekDay #form_WeekDay {display: grid; grid-template-columns: min-content auto;}
</style>

<div class="example-wrapper">
    <h1>Create an Program</h1>
    {{ form_start(ServicesForm) }}
    <div class="my-custom-class-for-errors">
        {{ form_errors(ServicesForm) }}
    </div>

    <div class="row">
        <div class="col">
            {{ form_row(ServicesForm.name) }}
        </div>
        <div class="col" id="some-custom-id">
            {{ form_row(ServicesForm.hour) }}
        </div>
        <div class="col WeekDay" id="some-custom-id">
            {{ form_row(ServicesForm.WeekDay) }}
        </div>

        
    </div>
{{ form_end(ServicesForm) }}

</div>
{% endblock %}

